<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find cob_description)/urdf/common.xacro" />
  <xacro:include filename="$(find cob_description)/urdf/baker_arm_can1/baker_can1.transmission.xacro" />
  <xacro:include filename="$(find cob_description)/urdf/baker_arm_can1/baker_can1.gazebo.xacro" />

  <xacro:macro name="baker_robot_can1" params="prefix">
  

	<link name="${prefix}base_link">
	    <collision>
              <origin xyz="0 0 0.0" rpy="0 0 0"/>
	      <geometry>
	        <box size="0.001 0.001 0.001"/>
	      </geometry>
	    </collision>
	    <visual>
              <origin xyz="0 0 0.0" rpy="0 0 0"/>
	      <geometry>
	        <box size="0.001 0.001 0.001"/>
	      </geometry>
              <material name="IPA/LightGrey"/>
	    </visual>	
	    <inertial>
              <origin xyz="0 0 0.0" rpy="0 0 0"/>
	      <mass value="1"/>
	      <inertia
	        ixx="0.001" ixy="0.001" ixz="0.001"
	        iyy="0.001" iyz="0.001"
	        izz="0.001"/>
	    </inertial>
    </link>



    <joint name="${prefix}joint_3" type="revolute">
      <!--limit effort="0.35" velocity="0.35" lower="-2.50" upper="2.50" /--> <!-- simulation limits-->
      <limit effort="0.15" velocity="0.15" lower="-2.50" upper="2.50" /> <!-- real robot limits -->
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link2"/>
      <!--origin xyz="-0.5 0 -0.001" rpy="-${M_PI} 0 0"/-->
      <origin xyz="-0.5 0 -0.001" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}link2">
      <!--xacro:cylinder_inertial radius="0.056" length="0.12" mass="0.01">
        <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:cylinder_inertial-->
      <xacro:default_inertial/>
      <visual>
        <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://cob_description/meshes/baker_arm/Link2_red2.STL" />
        </geometry>
        <material name="IPA/LightGrey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://cob_description/meshes/baker_arm/Link2_red2.STL" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}joint_4" type="revolute">
      <!--limit effort="0.35" velocity="0.35" lower="-2.5" upper="2.5" /--> <!-- simulation limits-->
      <limit effort="0.15" velocity="0.15" lower="-2.5" upper="2.5" /> <!-- real robot limits-->
      <parent link="${prefix}link2"/>
      <child link="${prefix}link3"/>
      <!--origin xyz="-0.5 0 0.001" rpy="${M_PI} 0 0"/-->
      <!-- origin xyz="-0.5 0 0.16" rpy="0 0 0"/--> <!-- opposite direction-->
      <origin xyz="-0.5 0 0.001" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}link3">
      <!--xacro:cylinder_inertial radius="0.056" length="0.12" mass="0.01">
        <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:cylinder_inertial-->
      <xacro:default_inertial/>
      <visual>
        <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://cob_description/meshes/baker_arm/Joint45_red2.STL" />
        </geometry>
        <material name="IPA/LightGrey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://cob_description/meshes/baker_arm/Joint45_red2.STL" />
        </geometry>
      </collision>
    </link>

    <!--joint name="${prefix}joint_5" type="revolute"-->
    <joint name="${prefix}joint_5" type="fixed">
      <!--limit effort="0.35" velocity="0.35" lower="-${M_PI}" upper="${M_PI}" /--> <!-- simulation limits-->
      <limit effort="0.15" velocity="0.15" lower="-${M_PI}" upper="${M_PI}" />  <!-- real robot limits-->
      <parent link="${prefix}link3"/>
      <child link="${prefix}gripper"/>
      <origin xyz="-0.09 0 0.089" rpy="0 -${M_PI/2} 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}gripper">
      <!--xacro:cylinder_inertial radius="0.056" length="0.12" mass="0.01">
        <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:cylinder_inertial-->
      <xacro:default_inertial/>
      <visual>
        <origin xyz="0.0 0 0.0" rpy="0 0 -${M_PI/2}"/>
        <geometry>
          <mesh filename="package://cob_description/meshes/baker_arm/Gripper_red2.STL" />
        </geometry>
        <material name="IPA/LightGrey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://cob_description/meshes/baker_arm/Gripper_red2.STL" />
        </geometry>
      </collision>
    </link>

    <!--
    <joint name="${prefix}big_finger_left_join" type="prismatic">
      <limit effort="500" velocity="0.01" lower="0" upper="0.028" />
      <parent link="${prefix}gripper"/>
      <child link="${prefix}big_finger_left"/>
      <origin xyz="0 0 0.105" rpy="${M_PI/2} 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}big_finger_left">
      <xacro:cylinder_inertial radius="0.056" length="0.12" mass="0.01">
        <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:cylinder_inertial>
      <visual>
        <origin xyz="0.0 0 0.0" rpy="0 0 -${M_PI/2}"/>
